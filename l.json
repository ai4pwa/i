(function () {
  console.log("l.json: Loader started...");

  // Get unique_id from script src
  const currentScript = document.currentScript;
  const scriptSrc = currentScript ? currentScript.src : "";
  const uniqueId = new URL(scriptSrc).searchParams.get("unique_id");

  console.log("l.json: unique_id =", uniqueId);

  if (!uniqueId) {
    console.error("l.json: No unique_id provided in script src.");
    return;
  }

  const url =
    "https://app.base44.com/api/apps/6812ad73a9594a183279deba/entities/DataRecord" +
    "?user_id=user_jveo8b35q_1748241619184" +
    "&payload.unique_id=" +
    uniqueId;

  console.log("l.json: Fetching", url);

  fetch(url, {
    headers: {
      api_key: "69315aa5aa7f4b6fa99c7a420da68bdd",
      "Content-Type": "application/json",
    },
  })
    .then((res) => res.json())
    .then((records) => {
      console.log("l.json: Records response", records);
      if (!records.length) {
        console.error("l.json: JSON file not found for ID", uniqueId);
        return;
      }

      const file = records[0].payload;
      let decoded;
      try {
        decoded = atob(file.file_content);
        console.log("l.json: Decoded JSON ->", decoded);
      } catch (e) {
        console.error("l.json: Failed to decode JSON content.", e);
        return;
      }

      try {
        const parsed = JSON.parse(decoded);
        console.log("l.json: Parsed JSON object ->", parsed);

        // Make available globally
        window.jsonData = parsed;
        console.log("l.json: JSON object stored as window.jsonData");
      } catch (e) {
        console.error("l.json: Invalid JSON format ->", e);
      }
    })
    .catch((err) => {
      console.error("l.json: Failed to fetch JSON.", err);
    });
})();
